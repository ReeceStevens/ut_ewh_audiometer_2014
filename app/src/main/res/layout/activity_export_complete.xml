<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin_altered"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_grey"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="ut.ewh.audiometrytest.ExportComplete">

    <TextView
        android:text="@string/export_data_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="@string/export_data_complete_button"
        android:background="@drawable/button_background"
        android:layout_gravity="right"
        android:gravity="left"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginTop="20sp"
        android:onClick="gotoMain"
        />

</LinearLayout>
