<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin_altered"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_grey"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="ut.ewh.audiometrytest.TestComplete">

    <TextView
        android:text="@string/test_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="100sp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/tableResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"></TableLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:text="@string/test_complete_body"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="@string/test_complete_button_yes"
        android:paddingLeft="10sp"
        android:paddingRight="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginTop="15sp"
        android:onClick="gotoExport"
        android:background="@drawable/button_background"
        android:gravity="left"
        android:layout_gravity="right"/>
    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="@string/test_complete_button_no"
        android:paddingLeft="10sp"
        android:paddingRight="30sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginTop="15sp"
        android:onClick="tmpGotoMain"
        android:background="@drawable/button_background"
        android:gravity="left"
        android:layout_gravity="right"/>

</LinearLayout>
