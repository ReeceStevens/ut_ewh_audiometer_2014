
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin_altered"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="@color/background_grey"
tools:context=".MainActivity"
android:orientation="vertical"
android:gravity="left">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/main_menu_greeting"
    android:textSize="30sp"
    android:textStyle="bold"
    android:textColor="#FF8000"
    android:layout_marginBottom="20sp"
    android:gravity="right"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/main_menu_greeting_body"
    android:textSize="20sp"
    android:textColor="#FFFFFF"
    android:layout_gravity="right"
    android:gravity="right"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<Button
    android:layout_width="270sp"
    android:layout_height="wrap_content"
    android:text="@string/button_start"
    android:onClick="gotoPretest"
    android:background="@drawable/button_background"
    android:paddingLeft="30sp"
    android:paddingRight="10sp"
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:layout_marginTop="15sp"
    android:layout_marginBottom="15sp"
    android:layout_gravity="left"
    android:gravity="right"/>
<Button
    android:layout_width="220sp"
    android:layout_height="wrap_content"
    android:text="@string/button_export"
    android:paddingLeft="30sp"
    android:paddingRight="10sp"
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:onClick="gotoExport"
    android:background="@drawable/button_background"
    android:layout_gravity="left"
    android:gravity="right"/>

 <Button
        android:layout_width="165sp"
        android:layout_height="wrap_content"
        android:text="@string/button_acknowledgements"
        android:paddingLeft="0sp"
        android:paddingRight="10sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginTop="15sp"
        android:onClick="gotoAcknowledgements"
        android:background="@drawable/button_background"
        android:gravity="right"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>